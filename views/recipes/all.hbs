<link href="/css/recipes/all.css" rel="stylesheet">

<div class="container">
    <ul class="tag-list">
        {{#each tags}}
            <li>
                <button 
                    id="tag-{{id}}" style="border-color:{{color}};{{#if selected}}background-color:{{color}};{{/if}}"
                    class="tag btn btn-tag">
                        {{title}}
                </button>
            </li>
        {{/each}}
    </ul>

    <ul class="recipe-list">
        {{#each recipes}}
            <li><a href="/recipe/{{id}}">{{title}}</a></li>
        {{/each}}
    </ul>
</div>

<script src="/js/recipes/all.js"></script>