<div class="container">

    <div class="col-md-6 col-md-offset-3">
        <form method="POST" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="password">New Password</label>
                <div>Your password must be at least 6 characters long.</div>
                <input id="password" name="password" type="password" class="form-control"></input>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input id="confirmPassword" name="confirmPassword" type="password" class="form-control"></input>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Password</button>
            </div>
            <div id="localError" hidden="true" class="alert alert-danger"></div>
            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            {{#if success}}
                <div class="alert alert-success">
                    {{success}} 
                    <a href="/login">Login</a>
                </div>
            {{/if}}
        </form>
    </div>
</div> <!-- /container -->

<script src="/js/validation.js" type="text/javascript"></script>
<script src="/js/resetpassword.js" type="text/javascript"></script>